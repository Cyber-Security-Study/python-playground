html
    font-family: "Helvetica"
    background: white

input[type="text"],
select
    height: 30px
    margin: 2px 6px 16px 0
    color: grey
    line-height: 15px
    border: 1px solid lightsteelblue

input[type="submit"]
    padding: 5px 10px 5px 10px
    background: lightsteelblue
    border: none
    box-shadow: 1px 1px 1px #4C6E91

input[type="submit"]:hover
    background: steelblue

@import '../templates/*';
